<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pinkpig.payment.infrastructure.dao.TradeOrderMapper">

    <resultMap id="BaseResultMap" type="com.pinkpig.payment.domain.trade.model.entity.TradeOrderEntity">
        <id column="id" property="id" /> <result column="order_id" property="orderId"/>
        <result column="user_id" property="userId"/>
        <result column="product_id" property="productId"/>
        <result column="order_name" property="orderName"/>
        <result column="amount" property="amount"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <insert id="insert" parameterType="com.pinkpig.payment.domain.trade.model.entity.TradeOrderEntity">
        INSERT INTO trade_order
        (order_id, user_id, product_id, order_name, amount, status, create_time)
        VALUES
        (#{orderId}, #{userId}, #{productId}, #{orderName}, #{amount}, #{status}, #{createTime})
    </insert>

    <select id="queryUnPayOrder" resultMap="BaseResultMap">
        SELECT * FROM trade_order
        WHERE user_id = #{userId}
        AND product_id = #{productId}
        AND status IN ('CREATE', 'PAYING')
        LIMIT 1
    </select>

    <select id="queryOrdersByStatus" resultMap="BaseResultMap">
        SELECT * FROM trade_order
        WHERE status = #{status}
    </select>

    <update id="updateStatus">
        UPDATE trade_order
        SET status = #{status}, pay_time = #{payTime}
        WHERE order_id = #{orderId}
    </update>

</mapper>